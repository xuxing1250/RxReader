<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
        <ImageView
            android:id="@+id/news_item_icon"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/img_default_book"
            android:layout_width="@dimen/news_imageicon_width"
            android:layout_height="@dimen/news_imageicon_height" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title_content"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:maxLines="2"
                android:textColor="#202020"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="0dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/news_item_from"
                    android:layout_marginLeft="4dp"
                    android:textSize="12sp"
                    android:text="2222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Space
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/news_item_time"
                    android:textSize="10sp"
                    android:text="2222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>